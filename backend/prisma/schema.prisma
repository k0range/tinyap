generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ログイン情報など リモートのユーザーを含まない
model Account {
  id            String @id @default(uuid()) @db.Uuid
  // usernameは@を含まない
  username      String @db.VarChar(32) @unique
  email         String @unique
  password      String
  refreshToken  String?
  createdAt     DateTime
  userId        String? @unique @db.Uuid
  user          User? @relation(fields: [userId], references: [id])
}

// ユーザーのプロフィールなど リモートのユーザーを含む
model User {
  id          String @id @default(uuid()) @db.Uuid
  account     Account?
  // @ユーザー名@サーバー名
  acct        String @unique
  displayName String
  bio         String @default("")
  createdAt   DateTime
  posts       Post[]
}

model Post {
  id         String @id @default(uuid()) @db.Uuid
  author     User @relation(fields: [authorId], references: [id])
  authorId   String @db.Uuid
  content    String
  createdAt  DateTime
}
